#include <iostream>

using namespace std;

int main() {
    char pass[6];
    for (int i=0, k=1; i< 6 ; i++, k++){
         cout <<"masukan password yang akan dikonversi ["<<k<<"] : ";
         cin >> pass[i];
         cout <<endl;
         
         if((pass[i]=='a')||(pass[i]=='b')||(pass[i]=='c')){
             pass[i]='2';
         } 
         else if((pass[i]=='d')||(pass[i]=='e')||(pass[i]=='f')){
             pass[i]='3';
         } 
         else if((pass[i]=='g')||(pass[i]=='h')||(pass[i]=='i')){
             pass[i]='4';
         } 
         else if((pass[i]=='j')||(pass[i]=='k')||(pass[i]=='l')){
             pass[i]='5';
         } 
         else if((pass[i]=='m')||(pass[i]=='n')||(pass[i]=='o')){
             pass[i]='6';
         } 
         else if((pass[i]=='p')||(pass[i]=='q')||(pass[i]=='r')){
             pass[i]='7';
         } 
         else if((pass[i]=='t')||(pass[i]=='u')||(pass[i]=='v')){
             pass[i]='8';
         } 
         else if((pass[i]=='w')||(pass[i]=='x')||(pass[i]=='y')||(pass[i]=='z')){
             pass[i]='9';
         } 
         else if(pass[i]==' '){
             pass[i]='1';
         } 
         else if(pass[i]=='+'){
             pass[i]='0';
         }
    }
    
    cout << "hasil password yang udah dikoversi dan disimpan : ";
    for(int i=0; i<6; i++){
      cout <<  pass[i];
    }
    
    return 0;
}
